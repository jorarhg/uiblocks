{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist",
    "composite": false,
    "noEmit": false,
  "emitDeclarationOnly": false,
  "skipLibCheck": true,
  "jsx": "react-jsx",
  "esModuleInterop": true,
  "moduleResolution": "node",
  "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["**/__tests__/**", "**/examples/**", "**/analysis/**", "**/app/**"]
}
